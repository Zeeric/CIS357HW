<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_my_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cis.gvsu.edu.geocalculator.MySettingsActivity"
    tools:showIn="@layout/activity_my_settings"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/DistanceBox"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight = "1">

        <TextView
            android:id="@+id/DistSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/DistU"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Spinner
            android:id="@+id/distance_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/DistSettings"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/BearingBox"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight = "1">

        <TextView
            android:id="@+id/BearSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/BearU"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Spinner
            android:id="@+id/bearing_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/BearSettings"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
