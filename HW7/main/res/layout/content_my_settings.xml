<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_my_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context="cis.gvsu.edu.geocalculator.MySettingsActivity"
    tools:showIn="@layout/activity_my_settings">

    <TextView
        android:id="@+id/DistSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/DistU"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/distance_units" />

    <TextView
        android:id="@+id/BearSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/BearU"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/bearing_units" />
</LinearLayout>
